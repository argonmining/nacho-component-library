{
  "compilerOptions": {
    "outDir": "lib",
    "module": "es2022",
    "target": "es2021",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "lib": ["es2021"],
  "include": ["src"],
  "exclude": ["node_modules"]
}