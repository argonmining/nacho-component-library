{

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
//  for live checking only
//  "include": ["src/**/*.ts", "src/**/*.tsx", "comp-testing/*.ts", "comp-testing/*.tsx"]
}